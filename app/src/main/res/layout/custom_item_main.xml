<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:elevation="@dimen/_5sdp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_homeF_profile"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_homeF_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:fontFamily="@font/vazir_medium_fd"
        android:text="132,0000"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_homeF_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/textRequest"

        android:fontFamily="@font/vazir_light"
        android:textColor="@color/mdtp_dark_gray"
        android:textSize="@dimen/_9sdp"
        android:padding="1dp"
        app:layout_constraintEnd_toStartOf="@+id/img_homeF_profile"
        app:layout_constraintTop_toTopOf="@+id/img_homeF_profile" />

    <TextView
        android:id="@+id/txt_homeF_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textNameHomeF"

        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_marginRight="2dp"
        android:padding="1dp"
        android:fontFamily="@font/vazir_medium_fd"
        app:layout_constraintBottom_toBottomOf="@+id/txt_homeF_request"
        app:layout_constraintEnd_toStartOf="@+id/txt_homeF_request"
        app:layout_constraintTop_toTopOf="@+id/img_homeF_profile" />

    <TextView
        android:id="@+id/txt_homeF_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textdescription"
        android:padding="1dp"
        android:textColor="@color/mdtp_dark_gray"
        android:textSize="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_homeF_name"
        app:layout_constraintEnd_toStartOf="@+id/txt_homeF_name"
        app:layout_constraintTop_toTopOf="@+id/txt_homeF_name" />

    <TextView
        android:id="@+id/txt_homeF_about_cost"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="@string/aboutUser"
        app:layout_constraintEnd_toEndOf="@+id/txt_homeF_request"
        app:layout_constraintTop_toBottomOf="@+id/txt_homeF_name" />

    <TextView
        android:id="@+id/txt_homeF_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vazir_medium_fd"
        android:text="@string/textPriceHomeF"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="@+id/txt_homeF_cost"
        app:layout_constraintTop_toBottomOf="@+id/txt_homeF_cost" />

    <TextView
        android:id="@+id/txt_homeF_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textHistory"
        android:layout_marginTop="@dimen/_1sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/txt_homeF_cost"
        app:layout_constraintTop_toBottomOf="@+id/txt_homeF_price" />
</androidx.constraintlayout.widget.ConstraintLayout>